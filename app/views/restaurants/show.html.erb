<div class="container col-8 py-3">
  <div class="d-flex justify-content-start aling-items-center">
    <h2 class="text-info my-0 mr-2"><%= @restaurant.name %></h2>
  </div>
  <div class="container border border-light my-3"></div>
  <p><%= @restaurant.address %></p>
  <%= link_to 'Show chef', chef_restaurant_path(@restaurant), :class => "btn btn-outline-info mt-2"  %>
  <%= link_to 'Back', restaurants_path, :class => "btn btn-outline-info mt-2"  %>
  <div class="container border border-light my-3"></div>
  <%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant), :class => "btn btn-outline-info mt-2"  %>
  <div class="container border border-light my-3"></div>
  <h2>Reviews</h2>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= sanitize star_rating(review.rating) %></p>
  <% end %>
</div>
