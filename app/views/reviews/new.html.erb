<div class="container">
  <h1 class="my-3 font-weight-bolder text-info">New Review for <% @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.button :submit, class: 'btn btn-outline-info' %>
  <% end %>
  <%= link_to 'Back', restaurants_path, :class => "btn btn-outline-info mt-2"  %>
</div>
